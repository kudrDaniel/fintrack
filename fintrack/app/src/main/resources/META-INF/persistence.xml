             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="FinTrackService">
        <description>Persistence for application</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ru.duckcoder.fintrack.model.Account</class>
        <class>ru.duckcoder.fintrack.model.Person</class>
        <class>ru.duckcoder.fintrack.model.Company</class>
        <class>ru.duckcoder.fintrack.model.Individual</class>
    </persistence-unit>
</persistence>